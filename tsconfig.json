{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "strict": true,
    "target": "esnext",
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "lib": [
      "es5",
      "es2015",
      "dom",
      "scripthost"
    ],
    "typeRoots": [
      "./custom-types",
      "./custom-types/globals",
      "./node_modules/@types",
    ],
    "esModuleInterop": true,
    "paths": {
      "src/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "./src/**/*",
    "./tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}